<?xml version="1.0" encoding="utf-8"?>
<brls:Box
    id="extensions/container"
    width="100%"
    height="100%"
    axis="column"
    paddingTop="20"
    paddingLeft="30"
    paddingRight="30">

    <!-- Title -->
    <brls:Label
        id="extensions/title"
        text="Extensions"
        fontSize="24"
        marginBottom="15"/>

    <!-- Extensions list -->
    <brls:ScrollingFrame
        id="extensions/scroll"
        width="100%"
        grow="1">

        <brls:Box
            id="extensions/list"
            width="100%"
            axis="column"/>

    </brls:ScrollingFrame>

</brls:Box>
